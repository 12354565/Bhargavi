<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/main_profile"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:contentDescription="@string/nav_header_desc"
        android:elevation="3dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintBottom_toTopOf="@+id/main_fullname"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/user" />

    <TextView
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_email"
        android:id="@+id/main_fullname"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="FullName"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/main_email" android:textColor="@color/colorWhite" android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:text="EmailAddress" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:layout_height="36dp" android:layout_width="49dp" app:srcCompat="@drawable/newaddd" android:elevation="5dp" android:id="@+id/addprofile" app:layout_constraintBottom_toBottomOf="@+id/main_profile" app:layout_constraintEnd_toEndOf="@+id/main_profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>
